{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

    {% block body %}
        <div class="flex justify-center items-center">
            <div class="flex flex-col max-w-md p-6 rounded-md sm:p-10 bg-gray-50 text-gray-800">
                <div class="mb-8 text-center">
                    <h1 class="my-3 text-4xl font-bold">Sign in</h1>
                    <p class="text-sm text-gray-600">Sign in to access your account</p>
                </div>
                <form novalidate="" method="POST" class="space-y-12">
                    <div class="space-y-4">
                        <div>
                            <label for="username" class="block mb-2 text-sm">Username</label>
                            <input type="text" name="username" value="{{ last_username }}" id="inputUsername" placeholder="Username" class="w-full px-3 py-2 border rounded-md border-gray-300 bg-gray-50 text-gray-800" required>
                        </div>
                        <div>
                            <div class="flex justify-between mb-2">
                                <label for="password" class="text-sm">Password</label>
                                <a rel="noopener noreferrer" href="#" class="text-xs hover:underline text-gray-600">Forgot password?</a>
                            </div>
                            <input type="password" name="password" id="inputPassword" autocomplete="current-password" placeholder="*****" class="w-full px-3 py-2 border rounded-md border-gray-300 bg-gray-50 text-gray-800" required>

                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        </div>
                    </div>
                    <div class="space-y-2">
                        <div>
                            <button type="submit" class="w-full px-8 py-3 font-semibold rounded-md bg-fuchsia-600 text-gray-50">Sign in</button>
                        </div>
                        <p class="px-6 text-sm text-center text-gray-600">Don't have an account yet?
                        <a href="{{ path('app_register') }}" rel="noopener noreferrer" class="hover:underline text-fuchsia-600">Sign up</a>.
                        </p>
                    </div>
                </form>
            </div>
        </div>
    {% endblock %}
